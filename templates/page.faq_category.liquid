{%- assign cat = page.slug -%}
{%- assign faq_path = page.parent.path | default: '/faq' -%}
<script>
  (function () {
    var target = "{{ faq_path }}?cat={{ cat | url_encode }}";
    window.location.replace(target);
  })();
</script>

<noscript>
  <p>Please <a href="{{ faq_path }}?cat={{ cat | url_encode }}">click here</a> to continue.</p>
</noscript>

{% schema %}
{
  "name": "FAQ Category",
  "description": "FAQ category container, redirects to FAQ index with category filter",
  "thumb_url": "images/schema/page.png",
  "sub_page_templates": ["faq_product"]
}
{% endschema %}